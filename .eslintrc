{
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "commonjs": true,
        "jquery": true
    },
    "globals": {
        "log": true,
        "c3": true
    },
    "rules": {
        "brace-style": [
            "warn",
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": "off",
        "curly": "error",
        "eqeqeq": "error",
        "new-cap": "error",
        "no-bitwise": "error",
        "no-caller": "error",
        "no-eq-null": "error",
        "no-unused-expressions": "error",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "no-var": "warn",
        "one-var": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "require-jsdoc": "error",
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "strict": [
            "error",
            "global"
        ],
        "valid-jsdoc": [
            "error",
            {
                "prefer": {
                    "return": "returns"
                },
                "requireReturn": false,
                "requireReturnDescription": false
            }
        ],
        "wrap-iife": [
            "error",
            "any"
        ]
    }
}
